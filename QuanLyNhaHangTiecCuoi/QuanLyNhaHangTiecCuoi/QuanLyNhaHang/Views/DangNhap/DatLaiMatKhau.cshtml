@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        /* ... Copy CSS từ file XacThucOtp ở trên dán vào đây ... */
        :root {
            --primary: #cda45e;
            --bg-overlay: rgba(0, 0, 0, 0.7);
            --form-bg: rgba(12, 11, 9, 0.9);
            --text-color: #ffffff;
        }

        body {
            font-family: "Open Sans", sans-serif;
            background: url('https://toplist.vn/images/800px/nha-hang-long-phung-805463.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: var(--text-color);
            margin: 0;
            padding: 0;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: var(--bg-overlay);
                z-index: -1;
            }

        .container {
            width: 100%;
            max-width: 500px;
            padding: 20px;
        }

        .form-box {
            background: var(--form-bg);
            padding: 40px 30px;
            border-radius: 8px;
            border: 1px solid var(--primary);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
        }

        h2 {
            font-family: "Playfair Display", serif;
            color: var(--primary);
            text-align: center;
            margin-bottom: 30px;
            font-size: 32px;
            text-transform: uppercase;
        }

        .form-group {
            margin-bottom: 15px;
        }

        input {
            width: 100%;
            padding: 12px 15px;
            background: transparent;
            border: 1px solid #625b4b;
            color: #fff;
            border-radius: 4px;
            outline: none;
            transition: 0.3s;
            font-size: 14px;
            box-sizing: border-box;
        }

            input:focus {
                border-color: var(--primary);
                box-shadow: 0 0 8px rgba(205, 164, 94, 0.2);
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background: var(--primary);
            border: none;
            color: #000;
            font-weight: 700;
            border-radius: 50px;
            cursor: pointer;
            text-transform: uppercase;
            margin-top: 10px;
            transition: 0.3s;
            font-size: 16px;
        }

            .btn-submit:hover {
                background: #d4ac6e;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(205, 164, 94, 0.4);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-box">
            <h2>Mật Khẩu Mới</h2>
            <form asp-action="DatLaiMatKhau" method="post">
                <div class="form-group">
                    <input type="password" name="MatKhauMoi" placeholder="Mật khẩu mới" required />
                </div>
                <div class="form-group">
                    <input type="password" name="XacNhanMatKhauMoi" placeholder="Xác nhận mật khẩu mới" required />
                </div>
                <button type="submit" class="btn-submit">Lưu Mật Khẩu</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["Type"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    icon: '@TempData["Type"]',
                    title: '@TempData["Title"]',
                    html: '@Html.Raw(TempData["Message"])',
                    background: '#1a1814', color: '#fff', confirmButtonText: 'Đồng ý', confirmButtonColor: '#cda45e'
                });
            });
        </script>
    }
</body>
</html>