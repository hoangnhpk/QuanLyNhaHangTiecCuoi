@model QuanLyNhaHang.ViewModels.DatLaiMatKhauViewModel
@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    Layout = null;
}

<style>
    :root {
        --primary: #cda45e;
        --bg-overlay: rgba(0, 0, 0, 0.7);
        --form-bg: rgba(12, 11, 9, 0.85);
    }

    body {
        font-family: "Open Sans", sans-serif;
        background: url('https://toplist.vn/images/800px/nha-hang-long-phung-805463.jpg') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--bg-overlay);
            z-index: -1;
        }

    .container {
        width: 100%;
        max-width: 420px;
        padding: 20px;
    }

    .form-box {
        background: var(--form-bg);
        padding: 40px 30px;
        border-radius: 5px;
        border: 1px solid var(--primary);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    }

    h2 {
        font-family: "Playfair Display", serif;
        color: var(--primary);
        text-align: center;
        margin-bottom: 30px;
        font-size: 32px;
    }

    input {
        width: 100%;
        padding: 12px;
        margin-bottom: 10px;
        background: transparent;
        border: 1px solid #625b4b;
        color: #fff;
        border-radius: 4px;
        outline: none;
        transition: 0.3s;
    }

        input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 5px rgba(205, 164, 94, 0.3);
        }

    .text-danger {
        color: #ff6b6b;
        font-size: 14px;
        display: block;
        margin-bottom: 10px;
    }

    .btn {
        width: 100%;
        padding: 12px;
        background: var(--primary);
        border: 2px solid var(--primary);
        color: #fff;
        font-weight: 600;
        border-radius: 50px;
        cursor: pointer;
        text-transform: uppercase;
        transition: 0.3s;
        margin-top: 10px;
    }

        .btn:hover {
            background: transparent;
            color: var(--primary);
        }

    .links {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
        color: #ccc;
    }

        .links a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }

            .links a:hover {
                text-decoration: underline;
                color: #fff;
            }
</style>

<body>
    <div class="container">
        <div class="form-box">
            <h2>Đặt Lại Mật Khẩu</h2>
            <form asp-action="DatLaiMatKhau" method="post">
                <input type="hidden" name="token" value="@ViewBag.Token" />

                <input asp-for="MatKhauMoi" type="password" placeholder="Mật khẩu mới" />
                <span asp-validation-for="MatKhauMoi" class="text-danger"></span>

                <input asp-for="XacNhanMatKhauMoi" type="password" placeholder="Xác nhận mật khẩu mới" />
                <span asp-validation-for="XacNhanMatKhauMoi" class="text-danger"></span>

                <button type="submit" class="btn">Cập Nhật Mật Khẩu</button>
            </form>

            @if (ViewBag.ThongBao != null)
            {
                <div style="color:lightgreen; text-align:center; margin-top:15px;">@ViewBag.ThongBao</div>
            }

            <div class="links">
                <p>Quay lại <a asp-action="Index" asp-controller="DangNhap">Đăng nhập</a></p>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
