@model QuanLyNhaHang.ViewModels.KhachHangDangNhapViewModel

@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null;
}

<style>
    /* --- STYLE CHUNG (Copy giống nhau cho cả 3 file) --- */
    :root {
        --primary: #cda45e;
        --bg-overlay: rgba(0, 0, 0, 0.7);
        --form-bg: rgba(12, 11, 9, 0.85);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: "Open Sans", sans-serif;
        background: url('https://toplist.vn/images/800px/nha-hang-long-phung-805463.jpg') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--bg-overlay);
            z-index: -1;
        }

    .back-home {
        position: fixed; /* Cố định vị trí */
        top: 30px; /* Cách mép trên 30px */
        left: 30px; /* Cách mép trái 30px */
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        font-weight: 600;
        display: flex;
        align-items: center;
        transition: 0.3s;
        z-index: 100; /* Nổi lên trên cùng */
    }

        .back-home span {
            margin-right: 8px;
            font-size: 20px;
            transition: 0.3s;
        }

        .back-home:hover {
            color: var(--primary); /* Đổi màu vàng khi di chuột */
        }

            .back-home:hover span {
                transform: translateX(-5px); /* Hiệu ứng mũi tên chạy sang trái */
            }

    .container {
        width: 100%;
        max-width: 600px; /* Tăng từ 420px lên 600px */
        padding: 30px;
    }

    .form-box {
        background: var(--form-bg);
        padding: 50px 40px; /* Tăng padding cho rộng rãi */
        border-radius: 5px;
        border: 1px solid var(--primary);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        font-size: 16px; /* Tăng kích thước chữ */
    }

    h2 {
        font-family: "Playfair Display", serif;
        color: var(--primary);
        text-align: center;
        margin-bottom: 30px;
        font-size: 32px;
    }

    input {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        background: transparent;
        border: 1px solid #625b4b;
        color: #fff;
        border-radius: 4px;
        outline: none;
        transition: 0.3s;
    }

        input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 5px rgba(205, 164, 94, 0.3);
        }

    .btn {
        width: 100%;
        padding: 12px;
        background: var(--primary);
        border: 2px solid var(--primary);
        color: #fff;
        font-weight: 600;
        border-radius: 50px;
        cursor: pointer;
        text-transform: uppercase;
        transition: 0.3s;
    }

        .btn:hover {
            background: transparent;
            color: var(--primary);
        }

    .links {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
        color: #ccc;
    }

        .links a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }

            .links a:hover {
                text-decoration: underline;
                color: #fff;
            }

    .input-eye {
        position: relative;
    }

        .input-eye input {
            width: 100%;
            padding-right: 40px; /* Chừa chỗ cho icon */
        }

        .input-eye i {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 20px;
            color: var(--primary);
        }

    .password-group {
        position: relative;
        width: 100%;
    }

        .password-group input {
            width: 100%;
            padding: 12px 40px 12px 12px; /* chừa chỗ bên phải cho icon */
            background: transparent;
            border: 1px solid #625b4b;
            color: #fff;
            border-radius: 4px;
            font-size: 15px;
        }

    .toggle-eye {
        position: absolute;
        top: 50%;
        right: 12px;
        transform: translateY(-50%);
        cursor: pointer;
        color: var(--primary);
        font-size: 20px;
    }
    .password-wrapper {
    position: relative;
    width: 100%;
}

.password-wrapper input {
    width: 100%;
    padding: 12px 45px 12px 12px; /* chừa chỗ cho icon bên phải */
    background: transparent;
    border: 1px solid #625b4b;
    color: #fff;
    border-radius: 4px;
    font-size: 15px;
    line-height: 1.5;
}

.password-wrapper i {
    position: absolute;
    right: 15px;
    top: 35%;
    transform: translateY(-50%);
    font-size: 22px;
    color: var(--primary);
    cursor: pointer;
    pointer-events: auto;
}

</style>
<body>
    <a href="/" class="back-home">
        <span>&#8592;</span> Trang chủ
    </a>
    <div class="container">
        <div class="form-box">
            <h2>Đăng Nhập</h2>
            <form asp-action="Index" method="post">
                <input asp-for="TaiKhoan" placeholder="Email hoặc Tên đăng nhập" />
                <span asp-validation-for="TaiKhoan" class="text-danger"></span>

                <div class="password-wrapper">
                    <input asp-for="MatKhau" type="password" placeholder="Mật khẩu" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                    <i id="eyeIcon" class="bi bi-eye-fill" onclick="togglePassword()"></i>
                </div>

                <button type="submit" class="btn">Đăng Nhập</button>
            </form>

            @if (ViewBag.ThongBao != null)
            {
                <div style="color:red; text-align:center;">@ViewBag.ThongBao</div>
            }

            <div class="links">
                <p>Chưa có tài khoản? <a asp-controller="DangKy" asp-action="Index">Đăng ký ngay</a></p>
                <p style="margin-top:10px"><a asp-action="QuenMatKhau">Quên mật khẩu?</a></p>
            </div>
        </div>
    </div>
</body>
@* Ẩn - hiển mật khẩu *@
<script>
    function togglePassword() {
        const input = document.getElementById("MatKhau");
        const icon = document.getElementById("eyeIcon");
        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("bi-eye-fill");
            icon.classList.add("bi-eye-slash-fill");
        } else {
            input.type = "password";
            icon.classList.remove("bi-eye-slash-fill");
            icon.classList.add("bi-eye-fill");
        }
    }
</script>

@* import Bootstrap Icons *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["Type"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                icon: '@TempData["Type"]', // success, error, warning
                title: '@(TempData["Title"] ?? "Thông báo")',
                text: '@Html.Raw(TempData["Message"])',
                background: '#1a1814', // Màu nền tối (khớp theme)
                color: '#fff',          // Chữ trắng
                confirmButtonText: 'Đồng ý',
                confirmButtonColor: '#cda45e' // Màu nút vàng
            });
        });
    </script>
}