@{
    ViewData["Title"] = "Xác Thực OTP";
    Layout = null;
}

<style>
    :root {
        --primary: #cda45e;
        --bg-overlay: rgba(0, 0, 0, 0.7);
        --form-bg: rgba(12, 11, 9, 0.85);
    }

    body {
        font-family: "Open Sans", sans-serif;
        background: url('https://toplist.vn/images/800px/nha-hang-long-phung-805463.jpg') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--bg-overlay);
            z-index: -1;
        }

    .container {
        width: 100%;
        max-width: 420px;
        padding: 20px;
    }

    .form-box {
        background: var(--form-bg);
        padding: 40px 30px;
        border-radius: 5px;
        border: 1px solid var(--primary);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    }

    h2 {
        font-family: "Playfair Display", serif;
        color: var(--primary);
        text-align: center;
        margin