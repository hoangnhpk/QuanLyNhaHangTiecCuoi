@model QuanLyNhaHang.Models.ComboMon

@{
    ViewData["Title"] = "Sửa Combo";
    Layout = "_LayoutAdmin";
    var listMonAn = ViewBag.ListMonAn as IEnumerable<QuanLyNhaHang.Models.MonAn>;
}

<link href="~/css/QuanTri.css" rel="stylesheet">

<div class="module-view active">
    <div class="module-header">
        <div class="module-title">CẬP NHẬT COMBO: @Model.MaComboMon</div>
    </div>

    <div class="card" style="max-width: 95%; margin: 20px auto;">
        <form id="formSua" method="post" asp-action="SuaCombo" asp-route-id="@Model.MaComboMon" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MaComboMon" />
            <input type="hidden" asp-for="HinhAnhCombo" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div style="background: #450a0a; color: #fca5a5; padding: 15px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #ef4444; font-weight: 500;">
                    <div style="display:flex; align-items:center; gap:10px;">
                        <span>⚠️</span> <strong>Vui lòng kiểm tra lại:</strong>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-top: 5px; margin-left: 20px; color: #fca5a5;"></div>
                </div>
            }

            <div class="split-columns" style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">

                <div>
                    <div class="card-title">Thông tin Combo</div>
                    <div class="form-group">
                        <label>Mã Combo</label>
                        <input asp-for="MaComboMon" class="input" readonly style="background: #1f2937; opacity: 0.7;" />
                    </div>
                    <div class="form-group">
                        <label>Tên Combo (*)</label>
                        <input asp-for="TenCombo" class="input" />
                        <span asp-validation-for="TenCombo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Hình ảnh</label>
                        @if (!string.IsNullOrEmpty(Model.HinhAnhCombo))
                        {
                            <div style="margin-bottom: 10px;">
                                <img src="@Model.HinhAnhCombo" style="height: 80px; border-radius: 8px; border: 1px solid #374151;" />
                            </div>
                        }
                        <input type="file" name="imageFile" class="input" accept="image/*" />
                        <small style="color: #9ca3af;">Để trống nếu giữ ảnh cũ</small>
                    </div>
                    <div class="form-group">
                        <label>Giá bán (VNĐ) (*)</label>
                        <input asp-for="GiaCombo" type="number" class="input" />
                        <span asp-validation-for="GiaCombo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Số lượng</label>
                        <input asp-for="SoLuong" type="number" class="input" />
                    </div>
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <select asp-for="TrangThai" class="select">
                            <option value="Đang bán">Đang bán</option>
                            <option value="Ngừng bán">Ngừng bán</option>
                            <option value="Hết hàng">Hết hàng</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Mô tả</label>
                        <textarea asp-for="MoTa" class="input" rows="3"></textarea>
                    </div>
                </div>

                <div>
                    <div class="card-title">Cập nhật món trong Combo</div>
                    <div style="max-height: 500px; overflow-y: auto; border: 1px solid #374151; padding: 10px; border-radius: 8px; background: #111827;">
                        <table style="width:100%;">
                            <thead>
                                <tr style="color: #9ca3af; border-bottom: 1px solid #374151;">
                                    <th style="padding:8px;">Chọn</th>

                                    <th style="width: 60px;">Hình</th>

                                    <th>Tên món</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (listMonAn != null)
                                {
                                    foreach (var mon in listMonAn)
                                    {
                                        var existingItem = Model.ChiTietCombos?.FirstOrDefault(x => x.MaMonAn == mon.MaMonAn);
                                        bool isChecked = existingItem != null;
                                        int sl = existingItem != null && existingItem.SoLuong.HasValue ? existingItem.SoLuong.Value : 1;

                                        <tr style="border-bottom: 1px solid #374151;">
                                            <td style="padding: 8px;">
                                                <input type="checkbox" name="monAnChon" value="@mon.MaMonAn" checked="@isChecked" style="width: 18px; height: 18px; cursor: pointer;" />
                                            </td>

                                            <td style="padding: 5px 0;">
                                                @if (!string.IsNullOrEmpty(mon.HinhAnhMonAn))
                                                {
                                                    <img src="@mon.HinhAnhMonAn" style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px; border: 1px solid #4b5563;" />
                                                }
                                                else
                                                {
                                                    <span style="font-size: 10px; color: #6b7280;">No IMG</span>
                                                }
                                            </td>

                                            <td style="color: #e5e7eb; padding-left: 10px;">@mon.TenMonAn</td>

                                            <td>
                                                <input type="number" name="soLuong_@mon.MaMonAn" value="@sl" min="1" style="width: 60px; background: #1f2937; border: 1px solid #374151; color: white; border-radius: 4px; padding: 4px;" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="modal-footer" style="padding-top: 20px; display: flex; gap: 10px; justify-content: flex-end;">
                <a href="@Url.Action("Index")" class="btn">Hủy bỏ</a>
                <button type="button" class="btn" onclick="showModal('formSua', 'edit')">Lưu Thay Đổi</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}