@model QuanLyNhaHang.Models.MonAn

@{
    ViewData["Title"] = "Sửa Món Ăn: " + Model.TenMonAn;
    Layout = "_LayoutAdmin";
}

<link href="~/css/QuanTri.css" rel="stylesheet">

<div class="module-view active">
    <div class="module-header">
        <div class="module-title">CẬP NHẬT MÓN: @Model.MaMonAn</div>
    </div>

    <div class="card" style="max-width: 95%; margin: 20px auto;">

        <form method="post" asp-action="Sua">
            @Html.AntiForgeryToken()

            <div class="card-title">Thông tin cơ bản</div>

            <div class="form-grid">

                <div class="form-group">
                    <label>Mã món ăn</label>
                    <input asp-for="MaMonAn" class="input" readonly style="opacity: 0.6; cursor: not-allowed; background: #1f2937;" />
                    <input type="hidden" asp-for="MaMonAn" />
                </div>

                <div class="form-group">
                    <label>Tên món ăn (*)</label>
                    <input asp-for="TenMonAn" class="input" placeholder="VD: Gà bó xôi" maxlength="100" />
                    <span asp-validation-for="TenMonAn" class="text-danger" style="color: #f87171; font-size: 13px; margin-top: 4px; display: block;"></span>
                </div>

                <div class="form-group">
                    <label>Đơn vị tính</label>
                    <input asp-for="DonViTinh" class="input" placeholder="Đĩa, Phần, Suất..." maxlength="20" />
                    <span asp-validation-for="DonViTinh" class="text-danger" style="color: #f87171; font-size: 13px; margin-top: 4px; display: block;"></span>
                </div>

                <div class="form-group">
                    <label>Đơn giá (VNĐ) (*)</label>
                    <input asp-for="DonGia" type="number" class="input" placeholder="0" min="0" max="999999999" step="1000" />
                    <span asp-validation-for="DonGia" class="text-danger" style="color: #f87171; font-size: 13px; margin-top: 4px; display: block;"></span>
                </div>

                <div class="form-group">
                    <label>Danh mục món (*)</label>
                    <select asp-for="LoaiMonAn" class="select">
                        <option value="">-- Chọn danh mục --</option>
                        <option value="Hải sản">Hải sản</option>
                        <option value="Khai vị">Khai vị</option>
                        <option value="Món chính">Món chính</option>
                        <option value="Tráng miệng">Tráng miệng</option>
                        <option value="Đồ uống">Đồ uống</option>
                        <option value="Salad">Salad</option>
                    </select>
                    <span asp-validation-for="LoaiMonAn" class="text-danger" style="color: #f87171; font-size: 13px; margin-top: 4px; display: block;"></span>
                </div>

                <div class="form-group">
                    <label>Trạng thái (*)</label>
                    <select asp-for="TrangThaiMonAn" class="select">
                        <option value="">-- Chọn trạng thái --</option>
                        <option value="Đang bán">Đang bán</option>
                        <option value="Hết món">Hết món</option>
                        <option value="Ngừng bán">Ngừng bán</option>
                    </select>
                    <span asp-validation-for="TrangThaiMonAn" class="text-danger" style="color: #f87171; font-size: 13px; margin-top: 4px; display: block;"></span>
                </div>

                <div class="form-group" style="grid-column: span 2;">
                    <label>Mô tả chi tiết</label>
                    <textarea asp-for="MoTaMonAn" class="input" rows="4" placeholder="Mô tả về món ăn, nguyên liệu, cách chế biến..." maxlength="500"></textarea>
                    <span asp-validation-for="MoTaMonAn" class="text-danger" style="color: #f87171; font-size: 13px; margin-top: 4px; display: block;"></span>
                    <small style="color: #9ca3af; font-size: 12px;">Tối đa 500 ký tự</small>
                </div>

                <div class="form-group" style="grid-column: span 2;">
                    <label>Ghi chú</label>
                    <textarea asp-for="GhiChu" class="input" rows="3" placeholder="Ghi chú thêm..."></textarea>
                    <span asp-validation-for="GhiChu" class="text-danger" style="color: #f87171; font-size: 13px; margin-top: 4px; display: block;"></span>
                </div>
            </div>

            <div class="modal-footer" style="padding-top: 20px; display: flex; gap: 10px; justify-content: flex-end;">
                <a href="@Url.Action("Index", "QuanLyThucDon")" class="btn" >Hủy bỏ</a>
                <button type="submit" class="btn" > Lưu thông tin</button>
            </div>
        </form>
    </div>
</div>