@model IEnumerable<QuanLyNhaHang.Models.DichVu>

<div class="row">
    <div class="col-md-12">
        <div style="max-height: 60vh; overflow-y: auto; padding-right: 10px;">
            @if (Model != null)
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center p-2"
                                 style="background: rgba(255,255,255,0.05); border-radius: 8px; border: 1px solid #444;">

                                <div class="form-check me-3">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           id="dv_@item.MaDichVu"
                                           value="@item.MaDichVu"
                                           data-name="@item.TenDichVu"
                                           data-price="@item.GiaDV"
                                           onchange="tinhTienDichVuTuChon()">
                                </div>

                                <img src="@(string.IsNullOrEmpty(item.HinhAnhDichVu) ? "https://via.placeholder.com/60" : item.HinhAnhDichVu)"
                                     style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px; margin-right: 10px;">

                                <div class="flex-grow-1">
                                    <div style="font-weight: bold; font-size: 14px;">@item.TenDichVu</div>
                                    <div style="color: #cda45e; font-size: 13px;">
                                        @string.Format("{0:N0} VNĐ", item.GiaDV)
                                    </div>
                                </div>

                                <div class="qty-control-dv" id="qty_dv_@item.MaDichVu" style="display:none; width: 60px;">
                                    <input type="number" class="form-control form-control-sm text-center"
                                           value="1" min="1"
                                           id="input_qty_dv_@item.MaDichVu"
                                           onchange="tinhTienDichVuTuChon()">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-3 pt-3" style="border-top: 1px solid #444;">
    <div>
        <span style="font-size: 16px;">Tổng tiền dịch vụ:</span>
        <strong id="totalServiceMoneyDisplay" style="color: #cda45e; font-size: 20px; margin-left: 10px;">0 VNĐ</strong>
    </div>
</div>