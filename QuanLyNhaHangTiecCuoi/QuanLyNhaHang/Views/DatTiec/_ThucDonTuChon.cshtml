@model IEnumerable<IGrouping<string, QuanLyNhaHang.Models.MonAn>>

<div class="row">
    <div class="col-md-12">
        <div style="max-height: 60vh; overflow-y: auto; padding-right: 10px;">
            @if (Model != null && Model.Any())
            {
                foreach (var group in Model)
                {
                    <h5 style="color: #cda45e; border-bottom: 1px solid #444; padding-bottom: 5px; margin-top: 20px;">
                        @(string.IsNullOrEmpty(group.Key) ? "Món Khác" : group.Key)
                    </h5>

                    <div class="row">
                        @foreach (var item in group)
                        {
                            var giaTien = item.DonGia ?? 0;

                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-2"
                                     style="background: rgba(255,255,255,0.05); border-radius: 8px; border: 1px solid #444;">

                                    <div class="form-check me-3">
                                        <input class="form-check-input item-checkbox" type="checkbox"
                                               id="mon_@item.MaMonAn"
                                               value="@item.MaMonAn"
                                               data-name="@item.TenMonAn"
                                               data-price="@giaTien"
                                               onchange="tinhTienTuChon()">
                                    </div>

                                    <img src="@(string.IsNullOrEmpty(item.HinhAnhMonAn) ? "https://via.placeholder.com/60" : item.HinhAnhMonAn)"
                                         style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px; margin-right: 10px;">

                                    <div class="flex-grow-1">
                                        <div style="font-weight: bold; font-size: 14px;">@item.TenMonAn</div>
                                        <div style="color: #cda45e; font-size: 13px;">
                                            @giaTien.ToString("N0") VNĐ / @item.DonViTinh
                                        </div>
                                    </div>

                                    <div class="qty-control" id="qty_@item.MaMonAn" style="display:none; width: 60px;">
                                        <input type="number" class="form-control form-control-sm text-center"
                                               value="1" min="1"
                                               id="input_qty_@item.MaMonAn"
                                               onchange="tinhTienTuChon()">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="text-center p-4 text-muted">Hiện chưa có món ăn nào trong thực đơn tự chọn.</div>
            }
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-3 pt-3" style="border-top: 1px solid #444;">
    <div>
        <span style="font-size: 16px;">Tổng tiền món ăn:</span>
        <strong id="totalMoneyDisplay" style="color: #cda45e; font-size: 20px; margin-left: 10px;">0 VNĐ</strong>
    </div>
</div>