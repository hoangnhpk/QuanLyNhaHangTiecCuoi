@model QuanLyNhaHang.Models.QuanTriVien

@{
    ViewData["Title"] = "Cập nhật thông tin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/css/QuanTri.css" rel="stylesheet">


<div class="module-view active" style="display:block;">
    <div class="module-header">
        <div class="module-title">Sửa: @Model.TenQuanTriVien</div>
        <a asp-action="Index" class="btn" style="text-decoration: none !important;">Quay lại</a>
    </div>

    <div class="card" style="width: 100%; max-width: none;">
        <form asp-action="Sua" asp-route-id="@Model.MaQuanTriVien" method="post" id="form-edit">
            @Html.AntiForgeryToken()

            <div class="form-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">

                <div class="form-group">
                    <label asp-for="MaQuanTriVien">Mã QTV</label>
                    <input asp-for="MaQuanTriVien" class="input" readonly style="background:#333; color:#ccc; cursor:not-allowed;" />
                </div>

                <div class="form-group">
                    <label>Mã Tài Khoản</label>
                    @if (Model.TaiKhoan != null)
                    {
                        <input type="hidden" asp-for="TaiKhoan.MaTaiKhoan" />
                        <input asp-for="TaiKhoan.MaTaiKhoan" class="input" disabled style="background:#333; color:#ccc; cursor:not-allowed;" />
                    }
                    else
                    {
                        <input type="text" class="input" value="Chưa có tài khoản" disabled style="background:#333; color:#999; font-style:italic;" />
                    }
                </div>

                @if (Model.TaiKhoan != null)
                {
                    <div class="form-group">
                        <label asp-for="TaiKhoan.UserName">Tên đăng nhập</label>
                        <input asp-for="TaiKhoan.UserName" class="input" />
                        <span asp-validation-for="TaiKhoan.UserName" style="color:red; font-size: 0.9em;"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TaiKhoan.Password">Mật khẩu</label>
                        <div class="password-wrapper">
                            <input asp-for="TaiKhoan.Password" id="matKhauInput" type="password" class="input" value="@Model.TaiKhoan.Password" />
                            <span class="toggle-password-icon" onclick="togglePasswordVisibility()">
                                <svg id="eyeOpen" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none;"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                <svg id="eyeClosed" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>
                            </span>
                        </div>
                        <span asp-validation-for="TaiKhoan.Password" style="color:red; font-size: 0.9em;"></span>
                    </div>
                }
                else
                {
                    <div style="display:none"></div>
                    <div style="display:none"></div>
                }

                <div class="form-group">
                    <label asp-for="TenQuanTriVien">Họ và Tên <span style="color:red">*</span></label>
                    <input asp-for="TenQuanTriVien" class="input" />
                    <span asp-validation-for="TenQuanTriVien" style="color:red; font-size: 0.9em;"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cccd"></label>
                    <input asp-for="Cccd" class="input" />
                    <span asp-validation-for="Cccd" style="color:red; font-size: 0.9em;"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SdtNV">Số điện thoại <span style="color:red">*</span></label>
                    <input asp-for="SdtNV" class="input" />
                    <span asp-validation-for="SdtNV" style="color:red; font-size: 0.9em;"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="input" />
                    <span asp-validation-for="Email" style="color:red; font-size: 0.9em;"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DiaChi"></label>
                    <input asp-for="DiaChi" class="input" />
                    <span asp-validation-for="DiaChi" style="color:red; font-size: 0.9em;"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TrangThai"></label>
                    <select asp-for="TrangThai" class="select">
                        <option value="Hoạt động">Hoạt động</option>
                        <option value="Tạm khóa">Tạm khóa</option>
                    </select>
                </div>

                <div class="form-group" style="grid-column: 1 / -1;">
                    <label asp-for="GhiChu"></label>
                    <input asp-for="GhiChu" class="input" />
                </div>
            </div>

            <div class="form-footer" style="margin-top:30px; display:flex; justify-content:flex-end;">
                <button type="button" class="btn" onclick="openConfirmModal()">Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>

<div id="confirmModal" class="custom-modal-overlay" style="display: none;">
    <div class="custom-modal-box">
        <span class="close-icon" onclick="closeConfirmModal()">×</span>
        <div class="modal-tag">CẬP NHẬT</div>
        <h3 class="modal-title">XÁC NHẬN SỬA DỮ LIỆU?</h3>
        <p class="modal-desc">
            Hành động này sẽ thay đổi thông tin của quản trị viên <b>@Model.TenQuanTriVien</b>.
        </p>
        <div class="modal-actions">
            <button class="btn-cancel" onclick="closeConfirmModal()">Hủy</button>
            <button class="btn-confirm" onclick="submitRealForm()">Cập Nhật</button>
        </div>
    </div>
</div>
<style>
    .form-group {
        width: 100%;
    }

    .password-wrapper {
        position: relative;
        width: 100% !important;
        display: block !important;
    }

        .password-wrapper input {
            width: 100% !important;
            display: block;
            box-sizing: border-box;
            padding-right: 40px;
        }

    .toggle-password-icon {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #888;
        z-index: 10;
        display: flex;
        align-items: center;
    }

        .toggle-password-icon:hover {
            color: #fff;
        }
</style>

<script>
    function openConfirmModal() { document.getElementById('confirmModal').style.display = 'flex'; }
    function closeConfirmModal() { document.getElementById('confirmModal').style.display = 'none'; }
    function submitRealForm() { document.getElementById('form-edit').submit(); }

    function togglePasswordVisibility() {
        var x = document.getElementById("matKhauInput");
        var open = document.getElementById("eyeOpen");
        var closed = document.getElementById("eyeClosed");
        if (x.type === "password") {
            x.type = "text";
            open.style.display = "block";
            closed.style.display = "none";
        } else {
            x.type = "password";
            open.style.display = "none";
            closed.style.display = "block";
        }
    }
</script>