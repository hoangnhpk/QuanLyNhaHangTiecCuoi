@model QuanLyNhaHang.ViewModels.KhachHangDangKyViewModel
@{
    ViewData["Title"] = "Đăng Ký Thành Viên";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        :root {
            --primary: #cda45e;
            --bg-overlay: rgba(0, 0, 0, 0.7);
            --form-bg: rgba(12, 11, 9, 0.9);
        }

        body {
            font-family: "Open Sans", sans-serif;
            background: url('https://toplist.vn/images/800px/nha-hang-long-phung-805463.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            position: relative;
            margin: 0;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: var(--bg-overlay);
                z-index: -1;
            }

        .container {
            width: 100%;
            max-width: 500px;
            padding: 20px;
        }

        .form-box {
            background: var(--form-bg);
            padding: 40px 30px;
            border-radius: 8px;
            border: 1px solid var(--primary);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
        }

        h2 {
            color: var(--primary);
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
        }

        .form-group {
            margin-bottom: 15px;
        }

        input {
            width: 100%;
            padding: 12px;
            background: transparent;
            border: 1px solid #625b4b;
            color: #fff;
            border-radius: 4px;
            box-sizing: border-box;
        }

            input:focus {
                border-color: var(--primary);
                outline: none;
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background: var(--primary);
            border: none;
            font-weight: bold;
            cursor: pointer;
            border-radius: 50px;
            text-transform: uppercase;
            margin-top: 10px;
        }

        .text-danger {
            color: #ff4d4d;
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        .links {
            text-align: center;
            margin-top: 25px;
            font-size: 14px;
        }

            .links a {
                color: var(--primary);
                text-decoration: none;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-box">
            <h2>Đăng Ký</h2>
            <form asp-action="Index" method="post">
                <div class="form-group">
                    <input asp-for="TaiKhoanKhachHang" placeholder="Tài khoản" />
                    <span asp-validation-for="TaiKhoanKhachHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="TenKhachHang" placeholder="Họ và tên" />
                    <span asp-validation-for="TenKhachHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="CccdKhachHang" placeholder="Số CCCD / CMND" />
                    <span asp-validation-for="CccdKhachHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="DiaChiKhachHang" placeholder="Địa chỉ" />
                    <span asp-validation-for="DiaChiKhachHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="EmailKhachHang" placeholder="Email" />
                    <span asp-validation-for="EmailKhachHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SdtKhachHang" placeholder="Số điện thoại" />
                    <span asp-validation-for="SdtKhachHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="MatKhauKhachHang" type="password" placeholder="Mật khẩu" />
                    <span asp-validation-for="MatKhauKhachHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="NhapLaiMatKhau" type="password" placeholder="Nhập lại mật khẩu" />
                    <span asp-validation-for="NhapLaiMatKhau" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-submit">Đăng Ký Thành Viên</button>
            </form>
            <div class="links">
                <p>Đã có tài khoản? <a href="@Url.Action("Index", "DangNhap")">Đăng nhập ngay</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["Type"] != null && TempData["Type"].ToString() == "success")
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: '@TempData["Title"]',
                html: '@Html.Raw(TempData["Message"])',
                confirmButtonColor: '#cda45e'
            });
        </script>
    }
</body>
</html>