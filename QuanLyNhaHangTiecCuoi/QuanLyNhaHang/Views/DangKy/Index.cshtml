@model QuanLyNhaHang.ViewModels.KhachHangDangKyViewModel

@{
    ViewData["Title"] = "Đăng Ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Ký - Nhà Hàng Long Phụng</title>

    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link href="~/assets/css/main.css" rel="stylesheet">

    <style>
        :root {
            --primary: #cda45e;
            --bg-overlay: rgba(0, 0, 0, 0.7);
            --form-bg: rgba(12, 11, 9, 0.85);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: "Open Sans", sans-serif;
            background: url('https://toplist.vn/images/800px/nha-hang-long-phung-805463.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            padding: 20px 0;
            position: relative; /* Để overlay hoạt động đúng */
        }

            /* Lớp phủ đen mờ lên hình nền */
            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: var(--bg-overlay);
                z-index: -1; /* Nằm dưới nội dung */
            }

        /* NÚT QUAY LẠI TRANG CHỦ */
        .back-home {
            position: fixed;
            top: 30px;
            left: 30px;
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            font-weight: 600;
            display: flex;
            align-items: center;
            transition: 0.3s;
            z-index: 100;
        }

            .back-home span {
                margin-right: 8px;
                font-size: 20px;
                transition: 0.3s;
            }

            .back-home:hover {
                color: var(--primary);
            }

                .back-home:hover span {
                    transform: translateX(-5px);
                }

        /* PHẦN FORM */
        .container-register { /* Đổi tên class để tránh xung đột với bootstrap .container */
            width: 100%;
            max-width: 500px;
            padding: 20px;
            z-index: 1; /* Nổi lên trên lớp phủ */
        }

        .form-box {
            background: var(--form-bg);
            padding: 40px 30px;
            border-radius: 5px;
            border: 1px solid var(--primary);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        h2 {
            font-family: "Playfair Display", serif;
            color: var(--primary);
            text-align: center;
            margin-bottom: 25px;
            font-size: 32px;
        }

        .register-input {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            background: transparent;
            border: 1px solid #625b4b;
            color: #fff;
            border-radius: 4px;
            outline: none;
            transition: 0.3s;
            font-size: 15px;
        }

            .register-input:focus {
                border-color: var(--primary);
                box-shadow: 0 0 5px rgba(205, 164, 94, 0.3);
            }

        .btn-register {
            width: 100%;
            padding: 12px;
            background: var(--primary);
            border: 2px solid var(--primary);
            color: #fff;
            font-weight: 600;
            border-radius: 50px;
            cursor: pointer;
            text-transform: uppercase;
            transition: 0.3s;
            margin-top: 10px;
        }

            .btn-register:hover {
                background: transparent;
                color: var(--primary);
            }

        .links {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #ccc;
        }

            .links a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 600;
            }

                .links a:hover {
                    text-decoration: underline;
                    color: #fff;
                }
    </style>
</head>

<body>

    <a href="/" class="back-home">
        <span>&#8592;</span> Trang chủ
    </a>

    <div class="container-register">
        <div class="form-box">
            <h2>Đăng Ký</h2>
            <form asp-action="Index" method="post">
                <input asp-for="TaiKhoanKhachHang" class="register-input" placeholder="Tài khoản" />
                <input asp-for="TenKhachHang" class="register-input" placeholder="Họ và tên" />
                <input asp-for="CccdKhachHang" class="register-input" placeholder="Số CCCD / CMND" />
                <input asp-for="DiaChiKhachHang" class="register-input" placeholder="Địa chỉ" />
                <input asp-for="EmailKhachHang" class="register-input" placeholder="Email" />
                <input asp-for="SdtKhachHang" class="register-input" placeholder="Số điện thoại" />
                <input asp-for="MatKhauKhachHang" type="password" class="register-input" placeholder="Mật khẩu" />
                <input asp-for="NhapLaiMatKhau" type="password" class="register-input" placeholder="Nhập lại mật khẩu" />

                <button type="submit" class="btn-register">Đăng Ký Thành Viên</button>
            </form>
            <div class="links">
                <p>Đã có tài khoản? <a href="/DangNhap">Đăng nhập ngay</a></p>
            </div>
        </div>
    </div>

    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>