@model QuanLyNhaHang.ViewModels.KhachHangDangKyViewModel
@{
    ViewData["Title"] = "Đăng Ký Thành Viên";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        /* ... GIỮ NGUYÊN CSS CŨ CỦA BẠN ... */
        :root {
            --primary: #cda45e;
            --bg-overlay: rgba(0, 0, 0, 0.7);
            --form-bg: rgba(12, 11, 9, 0.9);
            --text-color: #ffffff;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: "Open Sans", sans-serif;
            background: url('https://toplist.vn/images/800px/nha-hang-long-phung-805463.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: var(--text-color);
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: var(--bg-overlay);
                z-index: -1;
            }

        .back-home-btn {
            position: absolute;
            top: 30px;
            left: 40px;
            color: var(--primary);
            text-decoration: none;
            font-weight: bold;
            font-size: 16px;
            border: 1px solid var(--primary);
            padding: 10px 20px;
            border-radius: 50px;
            transition: 0.3s;
            z-index: 100;
            background: rgba(0,0,0,0.5);
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .back-home-btn:hover {
                background: var(--primary);
                color: #000;
            }

        .container {
            width: 100%;
            max-width: 500px;
            padding: 20px;
        }

        .form-box {
            background: var(--form-bg);
            padding: 40px 30px;
            border-radius: 8px;
            border: 1px solid var(--primary);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
        }

        h2 {
            font-family: "Playfair Display", serif;
            color: var(--primary);
            text-align: center;
            margin-bottom: 30px;
            font-size: 32px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        input {
            width: 100%;
            padding: 12px 15px;
            background: transparent;
            border: 1px solid #625b4b;
            color: #fff;
            border-radius: 4px;
            outline: none;
            transition: 0.3s;
            font-size: 14px;
        }

            input::placeholder {
                color: #aaa;
            }

            input:focus {
                border-color: var(--primary);
                box-shadow: 0 0 8px rgba(205, 164, 94, 0.2);
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background: var(--primary);
            border: none;
            color: #000;
            font-weight: 700;
            border-radius: 50px;
            cursor: pointer;
            text-transform: uppercase;
            margin-top: 10px;
            transition: 0.3s;
            font-size: 16px;
        }

            .btn-submit:hover {
                background: #d4ac6e;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(205, 164, 94, 0.4);
            }

        .links {
            text-align: center;
            margin-top: 25px;
            font-size: 14px;
            color: #ccc;
        }

            .links a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 600;
                transition: 0.3s;
            }

                .links a:hover {
                    color: #fff;
                    text-decoration: underline;
                }
        /* Ẩn thanh cuộn xấu xí trên Chrome */
        .form-box::-webkit-scrollbar {
            width: 5px;
        }

        .form-box::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <a href="@Url.Action("Index", "Home")" class="back-home-btn">
        <i class="fa fa-arrow-left"></i> Trang chủ
    </a>

    <div class="container">
        <div class="form-box">
            <h2>Đăng Ký</h2>

            <form asp-action="Index" method="post">

                <div class="form-group">
                    <input asp-for="TaiKhoanKhachHang" placeholder="Tài khoản" />
                    <span asp-validation-for="TaiKhoanKhachHang" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="TenKhachHang" placeholder="Họ và tên" />
                    <span asp-validation-for="TenKhachHang" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="CccdKhachHang" placeholder="Số CCCD / CMND" />
                    <span asp-validation-for="CccdKhachHang" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="DiaChiKhachHang" placeholder="Địa chỉ" />
                    <span asp-validation-for="DiaChiKhachHang" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="EmailKhachHang" type="email" placeholder="Email" />
                    <span asp-validation-for="EmailKhachHang" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="SdtKhachHang" placeholder="Số điện thoại" />
                    <span asp-validation-for="SdtKhachHang" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="MatKhauKhachHang" type="password" placeholder="Mật khẩu" />
                    <span asp-validation-for="MatKhauKhachHang" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="NhapLaiMatKhau" type="password" placeholder="Nhập lại mật khẩu" />
                    <span asp-validation-for="NhapLaiMatKhau" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-submit">Đăng Ký Thành Viên</button>
            </form>

            <div class="links">
                <p>Đã có tài khoản? <a href="@Url.Action("Index", "DangNhap")">Đăng nhập ngay</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Type"] != null && TempData["Type"].ToString() == "success")
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    icon: 'success',
                    title: '@TempData["Title"]',

                    /* --- SỬA DÒNG NÀY --- */
                    /* Đổi từ 'text' thành 'html' và dùng Html.Raw */
                    html: '@Html.Raw(TempData["Message"])',

                    background: '#1a1814',
                    color: '#fff',
                    confirmButtonColor: '#cda45e',
                    confirmButtonText: 'Đồng ý'
                });
            });
        </script>
    }
</body>
</html></html>