@model QuanLyNhaHang.ViewModels.KhachHangDangKyViewModel

@{
    ViewData["Title"] = "Đăng Ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Ký - Nhà Hàng Long Phụng</title>

    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/css/main.css" rel="stylesheet">

    <style>
        :root {
            --primary: #cda45e;
            --bg-overlay: rgba(0, 0, 0, 0.7);
            --form-bg: rgba(12, 11, 9, 0.85);
        }

        body {
            font-family: "Open Sans", sans-serif;
            background: url('https://toplist.vn/images/800px/nha-hang-long-phung-805463.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            padding: 20px 0;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: var(--bg-overlay);
                z-index: -1;
            }

        .container-register {
            width: 100%;
            max-width: 500px;
            padding: 20px;
            z-index: 1;
        }

        .form-box {
            background: var(--form-bg);
            padding: 40px 30px;
            border-radius: 5px;
            border: 1px solid var(--primary);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        h2 {
            font-family: "Playfair Display", serif;
            color: var(--primary);
            text-align: center;
            margin-bottom: 25px;
            font-size: 32px;
        }

        .register-input {
            width: 100%;
            padding: 12px;
            margin-bottom: 5px;
            background: transparent;
            border: 1px solid #625b4b;
            color: #fff;
            border-radius: 4px;
            outline: none;
            transition: 0.3s;
            font-size: 15px;
        }

            .register-input:focus {
                border-color: var(--primary);
                box-shadow: 0 0 5px rgba(205, 164, 94, 0.3);
            }

        .text-danger {
            color: #ff6b6b;
            font-size: 14px;
            display: block;
            margin-bottom: 10px;
        }

        .btn-register {
            width: 100%;
            padding: 12px;
            background: var(--primary);
            border: 2px solid var(--primary);
            color: #fff;
            font-weight: 600;
            border-radius: 50px;
            cursor: pointer;
            text-transform: uppercase;
            transition: 0.3s;
            margin-top: 10px;
        }

            .btn-register:hover {
                background: transparent;
                color: var(--primary);
            }

        .links {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #ccc;
        }

            .links a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 600;
            }

                .links a:hover {
                    text-decoration: underline;
                    color: #fff;
                }
    </style>
</head>

<body>
    <a href="/" class="back-home">
        <span>&#8592;</span> Trang chủ
    </a>

    <div class="container-register">
        <div class="form-box">
            <h2>Đăng Ký</h2>
            <form asp-action="Index" method="post">
                <input asp-for="TaiKhoanKhachHang" class="register-input" placeholder="Tài khoản" />
                <span asp-validation-for="TaiKhoanKhachHang" class="text-danger"></span>

                <input asp-for="TenKhachHang" class="register-input" placeholder="Họ và tên" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>

                <input asp-for="CccdKhachHang" class="register-input" placeholder="Số CCCD / CMND" />
                <span asp-validation-for="CccdKhachHang" class="text-danger"></span>

                <input asp-for="DiaChiKhachHang" class="register-input" placeholder="Địa chỉ" />
                <span asp-validation-for="DiaChiKhachHang" class="text-danger"></span>

                <input asp-for="EmailKhachHang" class="register-input" placeholder="Email" />
                <span asp-validation-for="EmailKhachHang" class="text-danger"></span>

                <input asp-for="SdtKhachHang" class="register-input" placeholder="Số điện thoại" />
                <span asp-validation-for="SdtKhachHang" class="text-danger"></span>

                <input asp-for="MatKhauKhachHang" type="password" class="register-input" placeholder="Mật khẩu" />
                <span asp-validation-for="MatKhauKhachHang" class="text-danger"></span>

                <input asp-for="NhapLaiMatKhau" type="password" class="register-input" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="NhapLaiMatKhau" class="text-danger"></span>

                <button type="submit" class="btn-register">Đăng Ký Thành Viên</button>
            </form>

            @if (ViewBag.ThongBao != null)
            {
                <div style="color:lightgreen; text-align:center; margin-top:15px;">@ViewBag.ThongBao</div>
            }

            <div class="links">
                <p>Đã có tài khoản? <a href="/DangNhap">Đăng nhập ngay</a></p>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
