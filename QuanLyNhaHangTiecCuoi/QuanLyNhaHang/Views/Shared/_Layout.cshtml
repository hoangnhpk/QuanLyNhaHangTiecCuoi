    <!-- THÊM JAVASCRIPT MỚI CHO MODAL ĐẶT TIỆC -->
    <script>
        // JavaScript cho chức năng modal
        let selectedMenu = null;

        function selectMenu(menuType, element) {
          // Remove selected class from all menu items
          document.querySelectorAll('.menu-item-card').forEach(card => {
            card.classList.remove('selected');
          });

          // Add selected class to clicked item
          element.classList.add('selected');
          selectedMenu = menuType;

          console.log('Đã chọn thực đơn:', menuType);
        }

        function toggleCombo(checkbox) {
          const comboCheckboxes = ['comboBasic', 'comboPremium', 'comboVIP'];
          const dichVuLeCheckboxes = document.querySelectorAll('.dichvu-le');

          if (checkbox.checked) {
            // Uncheck other combo checkboxes
            comboCheckboxes.forEach(id => {
              if (id !== checkbox.id) {
                document.getElementById(id).checked = false;
              }
            });

            // Disable and dim individual service checkboxes
            dichVuLeCheckboxes.forEach(cb => {
              cb.disabled = true;
              cb.checked = false;
            });

            console.log('Đã chọn combo:', checkbox.id);
          } else {
            // Check if any combo is still selected
            const anyComboChecked = comboCheckboxes.some(id => document.getElementById(id).checked);

            // If no combo is selected, enable individual services
            if (!anyComboChecked) {
              dichVuLeCheckboxes.forEach(cb => {
                cb.disabled = false;
              });
              console.log('Đã bỏ combo, kích hoạt dịch vụ lẻ');
            }
          }
        }

        // Optional: Log selected services when modal closes
        document.getElementById('dichVuModal').addEventListener('hidden.bs.modal', function () {
          const selectedServices = [];
          document.querySelectorAll('#dichVuModal input[type="checkbox"]:checked').forEach(cb => {
            selectedServices.push(cb.id);
          });
          console.log('Các dịch vụ đã chọn:', selectedServices);
        });

        // Optional: Log selected menu when modal closes
        document.getElementById('thucDonModal').addEventListener('hidden.bs.modal', function () {
          if (selectedMenu) {
            console.log('Thực đơn cuối cùng đã chọn:', selectedMenu);
          }
        });
    </script>
