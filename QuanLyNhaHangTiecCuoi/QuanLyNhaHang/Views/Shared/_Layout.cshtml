<script>
    function confirmLogout(e) {
        e.preventDefault(); // Chặn chuyển trang ngay lập tức

        Swal.fire({
            title: 'Đăng xuất?',
            text: "Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#cda45e', // Màu vàng
            cancelButtonColor: '#d33',     // Màu đỏ
            confirmButtonText: 'Đăng xuất',
            cancelButtonText: 'Hủy',
            background: '#1a1814',         // Nền tối
            color: '#fff'                  // Chữ trắng
        }).then((result) => {
            if (result.isConfirmed) {
                // Nếu người dùng chọn "Đăng xuất" thì mới chuyển trang
                window.location.href = '/DangNhap/DangXuat';
            }
        })
    }
</script>