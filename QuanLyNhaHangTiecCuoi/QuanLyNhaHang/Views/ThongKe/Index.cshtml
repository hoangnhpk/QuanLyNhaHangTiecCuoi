@{
    ViewData["Title"] = "Thống kê & Báo cáo";
    Layout = "_LayoutAdmin";
}

<style>
    /* --- CẤU HÌNH GIAO DIỆN CHÍNH (KHÔNG DÙNG MEDIA QUERY) --- */
    :root {
        --gold: #c5a059;
        --dark: #121212;
        --panel: #1e1e1e;
        --text: #e0e0e0;
        --text-dim: #888;
        --red: #ff5252;
        --green: #4caf50;
    }

    body {
        background-color: var(--dark);
        color: var(--text);
        font-family: 'Segoe UI', sans-serif;
        overflow-x: hidden; /* CHẶN TRÀN MÀN HÌNH NGANG */
        margin: 0;
        padding: 0;
    }

    /* Layout bao quanh */
    .dashboard-container {
        padding: 20px;
        width: 100%;
        box-sizing: border-box; /* Đảm bảo padding không làm phình to */
    }

    /* 1. Header & Toolbar */
    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        background: var(--panel);
        padding: 15px 20px;
        border-radius: 8px;
        border-bottom: 2px solid var(--gold);
    }

    .page-title {
        font-size: 20px;
        font-weight: bold;
        color: var(--gold);
        text-transform: uppercase;
    }

    .tools-area {
        display: flex;
        gap: 10px;
    }

    .my-select {
        background: #333;
        border: 1px solid #555;
        color: #fff;
        padding: 5px 10px;
        border-radius: 4px;
        outline: none;
    }

    .my-date {
        background: #333;
        border: 1px solid #555;
        color: #fff;
        padding: 5px 10px;
        border-radius: 4px;
        outline: none;
        color-scheme: dark;
    }

    /* 2. Grid Layout (Tự động co giãn, không cần media ) */
    .grid-box {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); /* Tự động xuống dòng nếu màn hình nhỏ */
        gap: 20px;
        margin-bottom: 20px;
    }

    /* Card chung */
    .my-card {
        background: var(--panel);
        border-radius: 8px;
        padding: 20px;
        border: 1px solid #333;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    }

    .card-head {
        font-size: 16px;
        font-weight: bold;
        color: var(--gold);
        border-bottom: 1px solid #333;
        padding-bottom: 10px;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
    }

    /* Biểu đồ CSS thuần */
    .chart-area {
        height: 250px;
        display: flex;
        align-items: flex-end;
        justify-content: space-around;
        padding-top: 20px;
    }

    .col-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
        justify-content: flex-end;
        width: 100%;
        cursor: pointer;
    }

    .col-pair {
        display: flex;
        align-items: flex-end;
        gap: 4px;
        height: 100%;
    }

    .bar-col {
        width: 15px;
        min-height: 2px;
        transition: height 0.5s;
        border-radius: 2px 2px 0 0;
        position: relative;
    }

    .bg-gold {
        background: var(--gold);
        opacity: 0.8;
    }

    .bg-red {
        background: var(--red);
        opacity: 0.8;
    }

    /* Hover hiện số */
    .col-group:hover .bar-col {
        opacity: 1;
        transform: scaleY(1.05);
    }

    .bar-col::after {
        content: attr(data-v);
        position: absolute;
        top: -20px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 10px;
        color: #fff;
        opacity: 0;
    }

    .col-group:hover .bar-col::after {
        opacity: 1;
    }

    .lbl-date {
        margin-top: 5px;
        font-size: 11px;
        color: #888;
    }

    /* Bảng số liệu */
    .row-stat {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px dashed #333;
    }

    .val-stat {
        font-weight: bold;
        color: #fff;
        font-size: 15px;
    }

    .txt-gold {
        color: var(--gold);
    }

    .txt-green {
        color: var(--green);
    }

    /* Bảng danh sách (Table) */
    .table-wrap {
        overflow-x: auto;
    }
    /* Cho phép cuộn ngang nếu bảng quá dài */
    .nice-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 700px;
        font-size: 14px;
    }

        .nice-table th {
            text-align: left;
            padding: 12px;
            color: #888;
            border-bottom: 1px solid #444;
        }

        .nice-table td {
            padding: 12px;
            border-bottom: 1px solid #333;
        }

    .btn-xem {
        background: transparent;
        border: 1px solid var(--gold);
        color: var(--gold);
        padding: 4px 12px;
        border-radius: 4px;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-xem:hover {
            background: var(--gold);
            color: #000;
        }

    /* --- PHẦN QUAN TRỌNG: SIDE PANEL (CHI TIẾT ĐƠN) --- */
    /* Lớp phủ mờ */
    .backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.8);
        z-index: 9998;
        display: none; /* Mặc định ẩn */
    }

        .backdrop.show {
            display: block;
        }

    /* Thanh trượt từ phải sang */
    .side-panel {
        position: fixed;
        top: 0;
        right: -700px; /* Giấu bên phải */
        width: 650px;
        max-width: 90%;
        height: 100vh;
        background: #181818;
        z-index: 9999;
        box-shadow: -5px 0 30px rgba(0,0,0,0.8);
        border-left: 2px solid var(--gold);
        transition: right 0.3s ease-out; /* Hiệu ứng trượt mượt */
        display: flex;
        flex-direction: column;
    }

        .side-panel.open {
            right: 0; /* Trượt ra */
        }

    /* Nội dung bên trong Panel */
    .p-header {
        padding: 20px;
        background: #222;
        border-bottom: 1px solid #333;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .p-title {
        font-size: 18px;
        font-weight: bold;
        color: var(--gold);
        text-transform: uppercase;
    }

    .btn-close {
        background: #333;
        border: none;
        color: #fff;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        cursor: pointer;
        font-size: 20px;
    }

        .btn-close:hover {
            background: var(--red);
        }

    .p-body {
        padding: 25px;
        overflow-y: auto;
        flex: 1;
    }

    /* Box thông tin kiểu Invoice */
    .info-box {
        background: rgba(255,255,255,0.03);
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 20px;
        border: 1px solid #333;
    }

    .line-info {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .lbl {
        color: #888;
    }

    .val {
        color: #fff;
        font-weight: 600;
    }

    /* Table con */
    .sub-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 13px;
    }

        .sub-table th {
            text-align: left;
            color: var(--gold);
            border-bottom: 1px solid #444;
            padding: 5px;
        }

        .sub-table td {
            padding: 8px 5px;
            border-bottom: 1px solid #333;
            color: #ddd;
        }

    .p-footer {
        padding: 20px;
        background: #222;
        border-top: 1px solid #333;
    }

    .total-line {
        display: flex;
        justify-content: space-between;
        font-size: 16px;
        margin-bottom: 5px;
    }

    .big-money {
        font-size: 22px;
        color: var(--green);
        font-weight: bold;
    }
</style>

<div class="dashboard-container">

    <div class="top-bar">
        <div class="page-title">Thống Kê Doanh Thu</div>
        <div class="tools-area">
            <select class="my-select" id="analyticsRange">
                <option value="day">Theo ngày</option>
                <option value="month" selected>Theo tháng</option>
                <option value="year">Theo năm</option>
            </select>
            <input type="month" id="filterDate" class="my-date" />
        </div>
    </div>

    <div class="grid-box">
        <div class="my-card">
            <div class="card-head">
                <span>Biểu đồ Đặt tiệc</span>
                <div style="font-size:12px; font-weight:normal; color:#888;">
                    <span style="color:var(--gold)">■ Tổng</span> &nbsp; <span style="color:var(--red)">■ Hủy</span>
                </div>
            </div>
            <div class="chart-area" id="chartContainer">
                <div style="width:100%; text-align:center; color:#555; padding-top:100px;">Đang tải dữ liệu...</div>
            </div>
        </div>

        <div class="my-card">
            <div class="card-head">Tổng hợp số liệu</div>

            <div class="row-stat">
                <span style="color:#888">Tổng số tiệc</span>
                <span class="val-stat" id="valTotal">0</span>
            </div>
            <div class="row-stat">
                <span style="color:#888">Số đơn hủy</span>
                <span class="val-stat" style="color:var(--red)" id="valCancel">0</span>
            </div>

            <div style="height:10px;"></div> <div class="row-stat">
                <div>
                    <div style="color:#888; font-size:13px;">Doanh thu dự kiến</div>
                    <div style="font-size:11px; color:#555;">(Tổng giá trị hợp đồng)</div>
                </div>
                <div class="val-stat txt-gold" id="valExpected">0 ₫</div>
            </div>

            <div class="row-stat">
                <div>
                    <div style="color:#888; font-size:13px;">Thực thu (Đã nhận)</div>
                    <div style="font-size:11px; color:#555;">(Cọc + Thanh toán)</div>
                </div>
                <div class="val-stat txt-green" id="valActual">0 ₫</div>
            </div>

            <div class="row-stat" style="border-bottom:none;">
                <span style="color:#888">Còn lại chưa thu</span>
                <span class="val-stat" id="valRemain">0 ₫</span>
            </div>
        </div>
    </div>

    <div class="my-card">
        <div class="card-head">Danh sách đơn hàng</div>
        <div class="table-wrap">
            <table class="nice-table">
                <thead>
                    <tr>
                        <th>Mã ĐT</th>
                        <th>Ngày TC</th>
                        <th>Khách hàng</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th style="text-align:center">Chi tiết</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                </tbody>
            </table>
        </div>
        <div style="text-align:right; margin-top:15px;">
            <button class="my-select" id="btnPrev" disabled> < </button>
            <span id="pageInfo" style="margin:0 10px; color:#888;">1/1</span>
            <button class="my-select" id="btnNext" disabled> > </button>
        </div>
    </div>

</div>

<div class="backdrop" id="backdrop" onclick="closePanel()"></div>

<div class="side-panel" id="sidePanel">
    <div class="p-header">
        <div class="p-title">Chi Tiết: <span id="p_Ma" style="color:#fff">...</span></div>
        <button class="btn-close" onclick="closePanel()">×</button>
    </div>

    <div class="p-body">
        <div class="info-box">
            <div class="line-info"><span class="lbl">Khách hàng:</span><span class="val" id="p_Ten">...</span></div>
            <div class="line-info"><span class="lbl">Điện thoại:</span><span class="val" id="p_Sdt">...</span></div>
            <div class="line-info"><span class="lbl">Ngày tổ chức:</span><span class="val" id="p_Ngay">...</span></div>
            <div class="line-info"><span class="lbl">Giờ / Số bàn:</span><span class="val"><span id="p_Gio"></span> - <span id="p_Ban"></span> bàn</span></div>
            <div class="line-info"><span class="lbl">Trạng thái:</span><span class="val" id="p_Status" style="color:var(--gold)">...</span></div>
        </div>

        <div style="color:var(--gold); font-weight:bold; margin-bottom:10px;">THỰC ĐƠN</div>
        <table class="sub-table">
            <thead><tr><th>Tên món</th><th style="text-align:center">SL</th><th style="text-align:right">Đơn giá</th></tr></thead>
            <tbody id="p_ListMon"></tbody>
        </table>

        <div style="color:var(--gold); font-weight:bold; margin-bottom:10px; margin-top:20px;">DỊCH VỤ</div>
        <table class="sub-table">
            <thead><tr><th>Tên dịch vụ</th><th style="text-align:center">SL</th><th style="text-align:right">Giá</th></tr></thead>
            <tbody id="p_ListDV"></tbody>
        </table>

        <div style="margin-top:20px; font-style:italic; color:#666; font-size:13px;">
            Ghi chú: <span id="p_GhiChu">...</span>
        </div>
    </div>

    <div class="p-footer">
        <div class="total-line">
            <span style="color:#aaa">Tổng giá trị:</span>
            <span class="val" id="p_Tong">0 ₫</span>
        </div>
        <div class="total-line">
            <span style="color:#aaa">Đã cọc:</span>
            <span class="val" style="color:var(--gold)" id="p_Coc">0 ₫</span>
        </div>
        <div style="border-top:1px solid #444; margin:10px 0;"></div>
        <div class="total-line">
            <span style="color:#fff">Cần thanh toán:</span>
            <span class="big-money" id="p_ConLai">...</span>
        </div>
    </div>
</div>

<script>
    // --- BIẾN TOÀN CỤC & SỰ KIỆN ---
    let currentPage = 1;

    document.addEventListener("DOMContentLoaded", function() {
        // Active menu sidebar (nếu có)
        if (typeof window.activateModule === 'function') window.activateModule('analytics');

        // Khởi tạo giá trị mặc định (Tháng hiện tại)
        const now = new Date();
        const year = now.getFullYear();
        const month = String(now.getMonth() + 1).padStart(2, '0');

        const filterDate = document.getElementById('filterDate');
        if(filterDate) filterDate.value = `${year}-${month}`;

        // Gán sự kiện
        document.getElementById('analyticsRange').addEventListener('change', updateType);

        // Sự kiện change: Reset về trang 1 và tải lại dữ liệu
        document.getElementById('filterDate').addEventListener('change', () => {
            currentPage = 1;
            loadData();
        });

        document.getElementById('btnPrev').addEventListener('click', () => changePage(-1));
        document.getElementById('btnNext').addEventListener('click', () => changePage(1));

        loadData();
    });

    // --- CÁC HÀM XỬ LÝ LOGIC ---

    function updateType() {
        const type = document.getElementById('analyticsRange').value;
        const input = document.getElementById('filterDate');
        const now = new Date();

        // Reset giá trị input khi chuyển loại lọc để tránh lỗi format
        if (type === 'day') {
            input.type = 'date';
            input.value = now.toISOString().split('T')[0]; // yyyy-MM-dd
        }
        else if (type === 'month') {
            input.type = 'month';
            input.value = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, '0')}`; // yyyy-MM
        }
        else {
            // Cấu hình input nhập năm
            input.type = 'number';
            input.placeholder = "Nhập năm (VD: 2025)";
            input.min = 2000;
            input.max = 2100;
            input.value = now.getFullYear();
        }

        currentPage = 1;
        loadData();
    }

    function changePage(d) {
        currentPage += d;
        loadData();
    }

    // --- GỌI API LẤY DỮ LIỆU ---
    function loadData() {
        const type = document.getElementById('analyticsRange').value;
        let dateRaw = document.getElementById('filterDate').value;

        // --- FIX LỖI LỌC THEO NĂM ---
        // Nếu lọc theo năm, dateRaw chỉ là "2025".
        // Controller C# yêu cầu DateTime, nên ta phải giả lập thành "2025-01-01" để C# hiểu.
        if (type === 'year') {
            if (!dateRaw || dateRaw < 1900 || dateRaw > 2100) {
                // Nếu người dùng nhập năm linh tinh, lấy năm hiện tại
                dateRaw = new Date().getFullYear();
                document.getElementById('filterDate').value = dateRaw;
            }
            dateRaw = `${dateRaw}-01-01`;
        }

        const url = `/ThongKe/GetStatData?type=${type}&date=${dateRaw}&page=${currentPage}`;

        // Hiệu ứng loading nhẹ
        document.getElementById('tableBody').style.opacity = '0.5';

        fetch(url)
            .then(r => r.json())
            .then(d => {
                renderStats(d.tongHop);
                renderChart(d.bieudo);
                renderTable(d.danhSachDonHang);
                document.getElementById('tableBody').style.opacity = '1';
            })
            .catch(e => {
                console.error("Lỗi tải dữ liệu:", e);
                // alert("Không thể tải dữ liệu thống kê."); // Uncomment nếu muốn hiện thông báo
            });
    }

    function renderStats(s) {
        if(!s) return;
        document.getElementById('valTotal').innerText = s.tongSoTiec;
        document.getElementById('valCancel').innerText = s.soTiecDaHuy;
        document.getElementById('valExpected').innerText = s.doanhThuDuKien;
        document.getElementById('valActual').innerText = s.thucThu;
        document.getElementById('valRemain').innerText = s.conLai;
    }

    function renderChart(d) {
        const c = document.getElementById('chartContainer');
        c.innerHTML = '';
        if(!d || d.length===0) {
            c.innerHTML='<div style="margin-top:100px; color:#666">Không có dữ liệu</div>';
            return;
        }

        d.forEach((item, i) => {
            const hT = item.percentage;
            const hC = item.totalCount > 0 ? (item.cancelCount / item.totalCount) * hT : 0;

            c.innerHTML += `
                <div class="col-group">
                    <div class="col-pair">
                        <div class="bar-col bg-gold" data-v="${item.totalCount}" style="height:${hT}%"></div>
                        <div class="bar-col bg-red" data-v="${item.cancelCount}" style="height:${hC}%"></div>
                    </div>
                    <div class="lbl-date">${item.label}</div>
                </div>
            `;
        });
    }

    function renderTable(l) {
        const b = document.getElementById('tableBody');
        b.innerHTML = '';

        // Update thông tin phân trang
        document.getElementById('pageInfo').innerText = `${l.currentPage} / ${l.totalPages||1}`;
        document.getElementById('btnPrev').disabled = l.currentPage <= 1;
        document.getElementById('btnNext').disabled = l.currentPage >= l.totalPages;

        if(!l.items || l.items.length === 0) {
            b.innerHTML = `<tr><td colspan="6" style="text-align:center; padding:20px; color:#666;">Không có đơn hàng nào</td></tr>`;
            return;
        }

        l.items.forEach(i => {
            let color = '#fff';
            if(i.isCancelled) color = 'var(--red)';
            else if(i.tinhTrangThanhToan.includes('100%')) color = 'var(--green)';

            b.innerHTML += `
                <tr>
                    <td style="font-weight:bold; color:#fff">${i.maDatTiec}</td>
                    <td>${i.ngayToChuc}</td>
                    <td>${i.khachHang}</td>
                    <td style="color:var(--gold); font-weight:bold">${i.tongTien}</td>
                    <td>${i.trangThai}</td>
                    <td style="text-align:center">
                        <button class="btn-xem" onclick="window.openPanel('${i.maDatTiec}')">Xem</button>
                    </td>
                </tr>
            `;
        });
    }

    // --- CÁC HÀM SIDE PANEL (CHI TIẾT ĐƠN) ---

    // Mở Panel
    window.openPanel = function(id) {
        // Reset dữ liệu cũ để tránh hiện thông tin của đơn trước
        document.getElementById('p_Ma').innerText = "Đang tải...";
        document.getElementById('p_ListMon').innerHTML = '';
        document.getElementById('p_ListDV').innerHTML = '';

        // Hiển thị giao diện
        document.getElementById('backdrop').classList.add('show');
        document.getElementById('sidePanel').classList.add('open');

        // Gọi API lấy chi tiết
        fetch(`/ThongKe/GetOrderDetail?id=${id}`)
            .then(r => r.json())
            .then(d => {
                document.getElementById('p_Ma').innerText = d.maDatTiec;
                document.getElementById('p_Ten').innerText = d.tenKhach;
                document.getElementById('p_Sdt').innerText = d.sdt;
                document.getElementById('p_Ngay').innerText = d.ngayToChuc;
                document.getElementById('p_Gio').innerText = d.gioToChuc;
                document.getElementById('p_Ban').innerText = d.soBan;
                document.getElementById('p_Status').innerText = d.trangThai;
                document.getElementById('p_GhiChu').innerText = d.ghiChu;

                document.getElementById('p_Tong').innerText = d.tongTien;
                document.getElementById('p_Coc').innerText = d.tienCoc;
                document.getElementById('p_ConLai').innerText = "---";

                // Render Món Ăn
                const tMon = document.getElementById('p_ListMon');
                if(d.monAn && d.monAn.length > 0) {
                    d.monAn.forEach(m => tMon.innerHTML += `<tr><td>${m.tenMon}</td><td style="text-align:center">${m.soLuong}</td><td style="text-align:right; color:var(--gold)">${m.donGia}</td></tr>`);
                } else tMon.innerHTML = '<tr><td colspan="3" style="text-align:center; color:#555">Chưa đặt món</td></tr>';

                // Render Dịch Vụ
                const tDV = document.getElementById('p_ListDV');
                if(d.dichVu && d.dichVu.length > 0) {
                    d.dichVu.forEach(x => tDV.innerHTML += `<tr><td>${x.tenDV}</td><td style="text-align:center">${x.soLuong}</td><td style="text-align:right; color:var(--gold)">${x.donGia}</td></tr>`);
                } else tDV.innerHTML = '<tr><td colspan="3" style="text-align:center; color:#555">Không có dịch vụ</td></tr>';
            })
            .catch(e => {
                alert("Lỗi tải chi tiết: " + e);
                window.closePanel();
            });
    }

