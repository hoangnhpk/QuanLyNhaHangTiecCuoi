@model QuanLyNhaHang.Models.KhachHang


@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Details";
}

<div class="crud-container">
    <h1>Chi Tiết Khách Hàng</h1>

    <div>
        <h4 class="details-title">Khách Hàng: @Model?.MaKhachHang</h4>
        <hr class="header-hr" />

        <div class="row details-layout">

            <div class="col-lg-6 col-md-12 details-section">
                <h5 class="section-heading"><i class="fa fa-user-circle"></i> Thông tin Người Dùng</h5>
                <dl class="row details-list">
                    <dt class="col-sm-4">Tên Khách Hàng</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TenKhachHang)</dd>

                    <dt class="col-sm-4">CCCD</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CccdKhachHang)</dd>

                    <dt class="col-sm-4">SĐT</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SdtKhachHang)</dd>

                    <dt class="col-sm-4">Địa Chỉ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DiaChiKhachHang)</dd>

                    <dt class="col-sm-4">Trạng Thái KH</dt>
                    <dd class="col-sm-8">
                        @{
                            // DỊCH TRẠNG THÁI KHÁCH HÀNG
                            var khStatus = Model.TrangThaiKhachHang == "Active" ? "Hoạt động" : "Khóa";
                            var khStatusClass = Model.TrangThaiKhachHang == "Active" ? "Active" : "Inactive";
                        }
                        <span class="status-display status-@khStatusClass">@khStatus</span>
                    </dd>

                    <dt class="col-sm-4">Ghi Chú</dt>
                    <dd class="col-sm-8 note-field">@Html.DisplayFor(model => model.GhiChu)</dd>
                </dl>
            </div>

            <div class="col-lg-6 col-md-12 details-section">
                <h5 class="section-heading"><i class="fa fa-lock"></i> Thông tin Tài khoản Đăng nhập</h5>

                @if (Model.TaiKhoan != null)
                {
                    <dl class="row details-list">
                        <dt class="col-sm-4">Mã Tài Khoản</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaiKhoan.MaTaiKhoan)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaiKhoan.Email)</dd>

                        <dt class="col-sm-4">Tài Khoản (Username)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaiKhoan.UserName)</dd>

                        <dt class="col-sm-4">Vai Trò</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaiKhoan.VaiTro)</dd>

                        <dt class="col-sm-4">Trạng Thái TK</dt>
                        <dd class="col-sm-8">
                            @{
                                // DỊCH TRẠNG THÁI TÀI KHOẢN
                                var tkStatus = Model.TaiKhoan.TrangThai == "Active" ? "Hoạt động" : "Khóa";
                                var tkStatusClass = Model.TaiKhoan.TrangThai == "Active" ? "Active" : "Inactive";
                            }
                            <span class="status-display status-@tkStatusClass">@tkStatus</span>
                        </dd>

                        <dt class="col-sm-4">Mật Khẩu (Hash)</dt>
                        <dd class="col-sm-8 password-hash-field">
                            <div style="display: flex; align-items: center; gap: 10px;">
                                <span id="passwordDisplay">********</span>
                                <button type="button" class="btn-toggle-password" id="togglePasswordBtn"
                                        data-hash="@(Model.TaiKhoan.Password)">
                                    <i class="fa fa-eye"></i> Xem Hash
                                </button>
                            </div>
                        </dd>
                    </dl>
                }
                else
                {
                    <div class="no-account-info">
                        <i class="fa fa-exclamation-triangle"></i>
                        <p>Khách hàng này chưa được gán Tài khoản đăng nhập.</p>
                        <a asp-action="Edit" asp-route-id="@Model?.MaKhachHang" class="btn-create-tk">Tạo/Gán Tài Khoản Ngay</a>
                    </div>
                }
            </div>

        </div>
    </div>

    <div class="crud-actions">
        <a asp-action="Edit" asp-route-id="@Model?.MaKhachHang" class="btn-action btn-edit"><i class="fa fa-pencil"></i> Chỉnh Sửa Thông Tin</a>
        <a asp-action="Index" class="btn-ghost"><i class="fa fa-arrow-left"></i> Quay lại Danh sách</a>
    </div>
</div>

<style>
    /* ======================================================= */
    /* CÁC QUY TẮC CSS CHUNG CHO DETAILS VIEW */
    /* ======================================================= */

    /* Định nghĩa lại các biến CSS cần thiết */
    :root {
        --primary: #cda45e;
        --primary-soft: rgba(205, 164, 94, 0.12);
        --bg-elevated: #15120f;
        --text-main: #f4f4f4;
        --text-muted: #a6a6a6;
        --danger: #ff5c5c;
        --success: #3c9c69;
        --warning: #e6a84c;
        --info: #5bc0de;
        --border-subtle: rgba(255, 255, 255, 0.08); /* Tăng độ đậm border một chút */
        --radius-md: 10px;
        --radius-pill: 999px;
    }

    /* Container chính để áp dụng nền và font */
    .crud-container {
        max-width: 100%;
        margin: 0;
        padding: 30px 40px; /* Tăng padding */
        background-color: var(--bg-elevated);
        color: var(--text-main);
        border-radius: var(--radius-md);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.7);
        font-family: "Poppins", system-ui, sans-serif;
        border: 1px solid var(--border-subtle);
    }

        .crud-container h1 {
            font-size: 30px; /* Tăng size H1 */
            text-transform: uppercase;
            letter-spacing: 0.1em; /* Tăng spacing */
            color: var(--primary);
            border-bottom: 2px solid var(--primary-soft);
            padding-bottom: 12px;
            margin-bottom: 25px;
        }

    .details-title {
        font-size: 20px;
        color: var(--text-main);
        margin-top: 15px;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .header-hr {
        border-color: rgba(255, 255, 255, 0.1); /* Sắc nét hơn */
        margin-top: 5px;
        margin-bottom: 20px;
    }

    /* =================================================== */
    /* CSS CHO BỐ CỤC 2 CỘT */
    /* =================================================== */

    .details-layout {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Thêm khoảng cách giữa các section */
        margin: 0;
    }

    .details-section {
        flex: 1; /* Chia đều không gian */
        min-width: 45%; /* Đảm bảo xếp chồng trên màn hình nhỏ */
        padding: 20px; /* Tăng padding section */
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-md);
        background-color: rgba(0, 0, 0, 0.1); /* Hơi tối hơn nền container */
        margin-bottom: 0; /* Loại bỏ margin-bottom cũ */
        transition: box-shadow 0.3s;
    }

        /* Hiệu ứng focus nhẹ */
        .details-section:hover {
            box-shadow: 0 0 15px var(--primary-soft);
        }

    /* Tiêu đề từng phần (Thông tin Người Dùng / Tài khoản) */
    .section-heading {
        color: var(--primary);
        font-size: 16px;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--primary-soft);
        font-weight: 600;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        display: flex;
        align-items: center;
    }

        .section-heading i {
            margin-right: 10px;
            color: var(--text-main);
            font-size: 18px;
        }

    /* Định dạng danh sách chi tiết (Details List - DL/DT/DD) */
    .details-list {
        width: 100%;
        margin-bottom: 0;
    }

        .details-list dt {
            color: var(--text-muted);
            font-weight: 500;
            padding: 8px 0;
            text-transform: capitalize; /* Chuyển về chữ hoa đầu */
            font-size: 13px;
            letter-spacing: 0.03em;
            line-height: 1.4;
        }

        .details-list dd {
            color: var(--text-main);
            font-weight: 600;
            padding: 8px 0;
            font-size: 14px;
            border-bottom: 1px dashed rgba(255, 255, 255, 0.08); /* Border mờ nhạt hơn */
            line-height: 1.4;
        }

            .details-list dd:last-child {
                border-bottom: none;
            }

    /* =================================================== */
    /* STYLE CHO CỘT GHI CHÚ */
    /* =================================================== */
    .note-field {
        font-style: italic;
        color: var(--warning);
        font-size: 13px !important; /* Tăng nhẹ size */
        white-space: pre-wrap;
    }

    /* =================================================== */
    /* STYLE CHO TRẠNG THÁI (STATUS BADGES) */
    /* =================================================== */
    .status-display {
        font-weight: 700 !important;
        padding: 4px 10px !important;
        border-radius: var(--radius-pill);
        display: inline-block;
        font-size: 11px !important;
        line-height: 1.2;
        text-transform: uppercase;
        margin-top: 2px; /* Căn chỉnh nhẹ */
    }

    .status-Active {
        background-color: var(--success);
        color: #fff;
    }

    .status-Inactive, .status-Suspended {
        background-color: var(--danger);
        color: #fff;
    }

    /* =================================================== */
    /* STYLE CHO THÔNG BÁO KHÔNG CÓ TÀI KHOẢN */
    /* =================================================== */
    .no-account-info {
        text-align: center;
        padding: 40px 10px; /* Tăng padding */
        border: 2px dashed rgba(255, 92, 92, 0.4); /* Border rõ hơn */
        border-radius: var(--radius-md);
        background-color: rgba(255, 92, 92, 0.08); /* Nền mờ hơn */
        color: var(--danger);
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .no-account-info i {
            font-size: 32px; /* Tăng size icon */
            margin-bottom: 15px;
        }

        .no-account-info p {
            font-size: 14px;
        }

    /* Nút Tạo/Gán TK trong khung báo lỗi */
    .btn-create-tk {
        display: inline-block;
        padding: 8px 15px;
        border-radius: var(--radius-pill);
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        color: #fff; /* Đổi màu chữ sang trắng */
        background-color: var(--danger);
        transition: all 0.2s;
        margin-top: 15px;
    }

        .btn-create-tk:hover {
            opacity: 0.9;
            transform: scale(1.03);
            box-shadow: 0 4px 15px rgba(255, 92, 92, 0.3);
        }

    /* =================================================== */
    /* NÚT ACTIONS */
    /* =================================================== */
    .crud-actions {
        display: flex;
        justify-content: center;
        gap: 20px; /* Tăng khoảng cách */
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin-top: 30px;
    }

    .btn-action.btn-edit, .btn-ghost {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px; /* Tăng padding */
        border-radius: var(--radius-pill);
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease-out;
    }

    .btn-action.btn-edit {
        color: #120f0a;
        background: linear-gradient(135deg, #e0b46e, #cda45e); /* Gradient đẹp hơn */
        box-shadow: 0 8px 25px rgba(205, 164, 94, 0.3);
    }

        .btn-action.btn-edit:hover {
            transform: translateY(-2px);
            filter: brightness(1.1);
        }

    .btn-ghost {
        color: var(--text-main);
        background: transparent;
        border: 1px solid var(--text-muted); /* Viền rõ hơn */
    }

        .btn-ghost:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: var(--primary);
            color: #fff;
            transform: translateY(-2px);
        }

    /* STYLE MẬT KHẨU ĐÃ SỬA */
    .password-hash-field {
        font-style: normal; /* Bỏ italic */
        color: var(--text-main) !important;
        font-size: 14px !important;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* STYLE CHO NÚT XEM MẬT KHẨU */
    .btn-toggle-password {
        background: rgba(255, 255, 255, 0.05); /* Nền nhẹ */
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: var(--primary); /* Màu vàng/đồng */
        padding: 6px 10px;
        border-radius: var(--radius-md);
        font-size: 11px;
        cursor: pointer;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .btn-toggle-password:hover {
            background-color: var(--primary-soft);
            color: #fff;
            border-color: var(--primary);
        }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleBtn = document.getElementById('togglePasswordBtn');
            const passwordDisplay = document.getElementById('passwordDisplay');

            if (toggleBtn && passwordDisplay) {
                const actualHash = toggleBtn.getAttribute('data-hash');
                const maskedText = '********';
                let isHashVisible = false;

                passwordDisplay.textContent = maskedText;

                toggleBtn.addEventListener('click', function () {
                    // Kiểm tra trường hợp hash rỗng hoặc hash giả định (từ Controller)
                    if (!actualHash || actualHash.trim() === '' || actualHash.includes('HASHED_')) {
                        passwordDisplay.textContent = '(Hash không khả dụng)';
                        this.style.display = 'none'; // Ẩn nút nếu hash không hợp lệ
                        return;
                    }

                    isHashVisible = !isHashVisible;

                    if (isHashVisible) {
                        // Hiển thị chuỗi Hash đầy đủ
                        passwordDisplay.textContent = actualHash;
                        this.innerHTML = '<i class="fa fa-eye-slash"></i> Ẩn Hash';
                    } else {
                        // Ẩn chuỗi Hash
                        passwordDisplay.textContent = maskedText;
                        this.innerHTML = '<i class="fa fa-eye"></i> Xem Hash';
                    }
                });
            }
        });
    </script>
}